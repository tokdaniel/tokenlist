{
	"name": "@tokdaniel/tokenlist",
	"version": "0.1.0",
	"description": "TypeScript utilities for token lists",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"lint": "npx @biomejs/biome lint",
		"format": "npx @biomejs/biome format . --write",
		"list:validate": "tsx ./scripts/validate.ts",
		"list:build": "tsx ./scripts/index.ts",
		"list:bundle": "npx tsup && npm run copy-tokenlist",
		"copy-tokenlist": "shx cp ./*.tokenlist.json ./dist",
		"test": "jest",
		"coverage": "jest --coverage"
	},
	"keywords": [
		"tokens",
		"tokenlist",
		"ethereum",
		"defi"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@uniswap/token-lists": "^1.0.0-beta.34",
		"viem": "^2.23.5",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@schema-hub/zod-error-formatter": "^0.0.7",
		"@types/jest": "^29.5.14",
		"@types/lodash": "^4.17.15",
		"@types/node": "^22.13.5",
		"fast-check": "^3.23.2",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"lodash": "^4.17.21",
		"shx": "^0.3.4",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3"
	},
	"peerDependencies": {
		"typescript": "^5.7.3"
	}
}
